
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login</h2>
@{ 
    if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <div class="alert alert-warning">@ViewBag.Message</div>
    }
}
<div class="form-horizontal">
    <form action="/usuario/Login" method="post">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label class="control-label col-md-5">Usuario:</label>
            <div class="col-md-7">
                <input type="text" name="user" class="form-control"/>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-5">Password</label>
            <div class="col-md-7">
                <input type="password" name="password" value="" class="form-control"/>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-1 col-md-6 btn-lg ">
                <input type="submit" name="" value="Ingresar" class="btn btn btn-success"/>
            </div> 
        </div>
    </form>    
</div>