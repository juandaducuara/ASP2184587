@model IEnumerable<ASP_2184587.Models.producto_compra>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de compra de productos</h2>

<p>
    @Html.ActionLink("Crear Compra", "Create", "", new { @class = "btn btn-success", @role = "button" })
</p>
<table class="table table-bordered">
    <tr>
        <th class="active">
            ID Compra
        </th>
        <th class="active">
            Producto
        </th>
        <th class="active">
            Cantidad
        </th>
        <th class="active">Opciones</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id_compra)
            </td>
            <td>
                @ASP_2184587.Controllers.productoCompraController.nombreProducto(item.id_producto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cantidad)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.id }, new { @class = "btn btn-primary btn-three", @role = "button" })
                @Html.ActionLink("Detalles", "Details", new { id = item.id }, new { @class = "btn btn-warning btn-three", @role = "button" })
                @Html.ActionLink("Borrar", "Delete", new { id = item.id }, new { @class = "linkDelete btn btn-danger btn-three", @role = "button" })
            </td>
        </tr>
    }

</table>

@section scripts
    {
    <script>
        $(".linkDelete").click(function(event)
        {
            if(!confirm('¿Esta seguro de eliminar?'))
            {
            event.preventDefault();
            }
        })
    </script>
    }
