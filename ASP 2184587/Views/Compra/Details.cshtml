@model ASP_2184587.Models.compra

@{
    ViewBag.Title = "Details";
}

<h2>Detalles de compra</h2>

<div>
    <h4>Compra</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Fecha:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.fecha)
        </dd>

        <dt>
            Total compra:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.total)
        </dd>

        <dt>
            Nombre usuario:
        </dt>

        <dd>
            @ASP_2184587.Controllers.CompraController.nombreUsuario(Model.id_usuario)
        </dd>

        <dt>
            Nombre cliente:
        </dt>

        <dd>
            @ASP_2184587.Controllers.CompraController.nombreCliente(Model.id_cliente)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.id }) |
    @Html.ActionLink("Regresar a la lista", "Index")
</p>
