@model IEnumerable<ASP_2184587.Models.producto>

@{
    ViewBag.Title = "Index";
}

<h2>Lista Productos</h2>

<p>
    @Html.ActionLink("Crear Producto", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Nombre
        </th>
        <th>
            precio unitario
        </th>
        <th>
            Descripción
        </th>
        <th>
            Cantidad
        </th>
        <th>
            Nombre Proveedor
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.percio_unitario)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cantidad)
        </td>
        <td>
            @ASP_2184587.Controllers.ProductoController.nombreProveedor(item.id_proveedor)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.id }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.id }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.id },new {@class = "linkDelete" })
        </td>
    </tr>
}
</table>

@section scripts
    {
    <script>
        $(".linkDelete").click(function(event)
        {
            if(!confirm('¿Esta seguro de eliminar?'))
            {
            event.preventDefault();
            }
        })
    </script>
    }
